<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".History">


    <LinearLayout
        android:id="@+id/upperNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#8C57E8"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/appointment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Appointment History"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:padding="18dp"/>

        <ImageView
            android:id="@+id/logout"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/baseline_logout_24" />
    </LinearLayout>




    <ScrollView
        android:id="@+id/scroll_layout"
        android:layout_width="match_parent"
        android:layout_below="@id/upperNav"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/history_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

    </ScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-6dp"
        android:background="#BA94FF"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:padding="3dp"
            android:src="@drawable/baseline_home_24"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/appointmentBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"

            android:layout_margin="15dp"
            android:layout_weight="1"
            android:padding="3dp"
            android:src="@drawable/baseline_form_view_24"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/history"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:padding="3dp"
            android:src="@drawable/baseline_history_24"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout >